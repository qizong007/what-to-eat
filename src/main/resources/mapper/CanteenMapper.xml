<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzufood.repository.CanteenMapper">

    <resultMap id="canteenMap" type="com.fzufood.entity.Canteen">
        <id column="canteen_id" property="canteenId"></id>
        <result column="canteen_name" property="canteenName"></result>
        <result column="window_id" property="windowId"></result>
    </resultMap>

    <select id="findAll" resultMap="canteenMap">
        select * from canteen
    </select>
    
    <select id="findById" parameterType="java.lang.Integer" resultMap="canteenMap">
        select * from canteen where canteen_id = #{id}
    </select>
    
    <insert id="save" parameterType="com.fzufood.entity.Canteen">
        insert into canteen(canteen_name) values(#{canteenName})
    </insert>
    
</mapper>